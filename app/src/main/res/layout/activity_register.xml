<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbMain"
        style="@style/Widget.MaterialComponents.Toolbar.Primary"
        android:layout_width="0dp"
        android:layout_height="?android:actionBarSize"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tbMain">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">
            <RelativeLayout
                style="@style/style_rl"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/tv"
                    style="@style/style_tv_title"
                    android:text="用户名"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:hint="@string/login"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/tv"
                    android:textColor="@color/dark_blue_bg"
                    android:textSize="18sp" />

            </RelativeLayout>

            <RelativeLayout style="@style/style_rl">

                <TextView
                    android:id="@+id/tv_2"
                    style="@style/style_tv_title"
                    android:text="证件号码" />

                <TextView
                    style="@style/style_text"
                    android:layout_toEndOf="@+id/tv_2"
                    android:text="@{viewModel.detailData.varietyName}" />

            </RelativeLayout>

            <View style="@style/style_view" />
            <RelativeLayout style="@style/style_rl">

                <TextView
                    android:id="@+id/tv_3"
                    style="@style/style_tv_title"
                    android:text="姓名" />

                <TextView
                    style="@style/style_text"
                    android:layout_toEndOf="@+id/tv_3"
                    android:text="@{viewModel.detailData.varietyName}" />

            </RelativeLayout>

            <View style="@style/style_view" />
            <RelativeLayout style="@style/style_rl">

                <TextView
                    android:id="@+id/tv_4"
                    style="@style/style_tv_title"
                    android:text="手机号码" />

                <TextView
                    style="@style/style_text"
                    android:layout_toEndOf="@+id/tv_4"
                    android:text="@{viewModel.detailData.varietyName}" />

            </RelativeLayout>

            <View style="@style/style_view" />
            <RelativeLayout style="@style/style_rl">

                <TextView
                    android:id="@+id/tv_5"
                    style="@style/style_tv_title"
                    android:text="登录密码" />

                <TextView
                    style="@style/style_text"
                    android:layout_toEndOf="@+id/tv_5"
                    android:text="@{viewModel.detailData.varietyName}" />

            </RelativeLayout>

            <View style="@style/style_view" />
            <RelativeLayout style="@style/style_rl">

                <TextView
                    android:id="@+id/tv_6"
                    style="@style/style_tv_title"
                    android:text="确认密码" />

                <TextView
                    style="@style/style_text"
                    android:layout_toEndOf="@+id/tv_6"
                    android:text="@{viewModel.detailData.varietyName}" />

            </RelativeLayout>

            <View style="@style/style_view" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>